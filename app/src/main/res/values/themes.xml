        <item name="colorSecondary">@color/deep_orange_100</item>
        <item name="colorSecondaryVariant">@color/deep_orange_100_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/secondary_text_third</item>

        <item name="android:textColorTertiary">@color/title_text_third</item>
        <item name="android:textColorPrimaryDisableOnly">@color/secondary_text_third</item>
        <item name="buttonTint">@color/title_text_third</item>
    </style>

    <style name="Theme.Quiz.Fourth" parent="Theme.Quiz">
        <item name="colorPrimary">@color/secondary_text_fourth</item>
        <item name="colorPrimaryDark">@color/deep_orange_100_dark</item>
